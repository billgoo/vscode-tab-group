{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true, // Added this option to avoid errors on case-sensitive file systems
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}